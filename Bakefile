#!/bin/bash

serve() {
  .venv/bin/python main.py
}

deploy() {
  ssh pya "/home/gijs3/.local/bin/python /home/gijs3/web/deploy.py"    
}

force_deploy() {
  source .env
  curl -X POST "https://eu.pythonanywhere.com/api/v0/user/gijs3/webapps/www.gijs6.nl/reload/" -H "Authorization: Token $API_TOKEN"
}

format() {
  ruff format . # Python
  prettier --write "**/*.{css,js}" # CSS/JS
  djlint . --reformat # Jinja
}
